@{
    Layout = "~/Views/Shared/_AccountantLayout.cshtml";
}

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<div class="container">
    <br />
    <div>

        <table id="myTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Class Name</th>
                    <th>Fee Name</th>
                    <th>Amount</th>
                    <th>Payment Date</th>
                </tr>
            </thead>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $("#myTable").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/StudentPaymentList/LoadAllPayments",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Name", "name": "Name", "autoWidth": true },
                    { "data": "Username", "name": "Username", "autoWidth": true },
                    { "data": "ClassName", "name": "ClassName", "autoWidth": true },
                    { "data": "FeeName", "name": "FeeName", "autoWidth": true },
                    { "data": "Amount", "name": "Amount", "autoWidth": true },
                    { "data": "CreatedDate", "name": "CreatedDate", "autoWidth": true },


                ]
            });
        });
        function DeleteData(ID) {
            if (confirm("Are you sure you want to delete ...?")) {
                Delete(ID);
            }
            else {
                return false;
            }
        }
         function Delete(ID)
    {
        var url = '@Url.Content("~/")' + "UsersProfiles/Delete";

            $.post(url, { ID: ID }, function (data)
                {
                    if (data)
                    {
                        alert("Delete Student !");
                        oTable = $('#myTable').DataTable();
                        oTable.draw();
                    }
                    else
                    {
                        alert("Something Went Wrong!");
                    }
                });
    }
    </script>

</div>

