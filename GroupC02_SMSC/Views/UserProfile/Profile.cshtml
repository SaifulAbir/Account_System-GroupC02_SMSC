@model GroupC02_SMSC.Models.RegistrationViewModel
@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}
<div class="container">
    <br />
    
        <div class="panel panel-default">
            <div class="panel-heading" style="background-image:none;background: #9400D3; color: #fff;">
                <h3 class="panel-title">Your Profile</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-4">
                        <br />
                        <label class="control-label" asp-for="Name">Name</label>
                        <input asp-for="Name" readonly="readonly" type="text" class="form-control" />
                    </div>
                    <div class="col-lg-4">
                        <br />
                        <label class="control-label" asp-for="Mobileno">Mobile No</label>
                        <input asp-for="Mobileno" readonly="readonly" name="Mobileno" type="text" class="form-control" />
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <br />
                        <label class="control-label" asp-for="EmailID">Email ID</label>
                        <input asp-for="EmailID" readonly="readonly" type="text" class="form-control" />
                    </div>
                    <div class="col-lg-4">
                        <br />
                        <label class="control-label" asp-for="Gender">Gender</label>
                        <input asp-for="Gender" readonly="readonly" type="text" class="form-control" />
                    </div>

                </div>
                <div class="row">

                    <div class="col-lg-4">
                        <br />
                        <label class="control-label" asp-for="Birthdate">Birthdate</label>
                        <input asp-for="Birthdate" id="Birthdate" readonly="readonly" type="text" class="form-control" />
                    </div>
                    <div class="col-lg-4">
                        <br />
                        <label class="control-label" asp-for="Address">Address</label>
                        <input asp-for="Address" readonly="readonly" type="text" class="form-control" />
                    </div>
                </div>
                <div class="row">

                    <div class="col-lg-4">
                        <br />
                        <label class="control-label" asp-for="Username">Username</label>
                        <input asp-for="Username" readonly="readonly" type="text" class="form-control" />
                    </div>

                    <div class="col-lg-4">
                        <br />
                        <label class="control-label" asp-for="ClassName">Class Name</label>
                        <input asp-for="ClassName" readonly="readonly" type="text" class="form-control" />
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <br />
                        <a class="btn btn-success" href="Edit">Update Your Profile </a>
                    </div>
                    
                </div>
                    
                
            </div>
        </div>
    </div>
